@model List<TestimonialDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Testimonial Table</h4>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Title</th>
                        <th>ImagePath</th>
                        <th>Comment</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.ImagePath</td>
                            <td>@item.Comment</td>
                            <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-danger">Delete</a></td>
                            <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-success">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-primary">Create Testimonial</a>
        </div>
    </div>
</div>
