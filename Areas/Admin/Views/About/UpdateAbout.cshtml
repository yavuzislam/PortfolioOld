@model AboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>About Update Page</h4>
        <br />
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <label>Title</label>
            <input type="text" class="form-control" asp-for="Title" />
            <br />
            <label>Description</label>
            <input type="text" class="form-control" asp-for="Description" />
            <br />
            <label>Age</label>
            <input type="text" class="form-control" asp-for="Age" />
            <br />
            <label>Email</label>
            <input type="text" class="form-control" asp-for="Email" />
            <br />
            <label>Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
            <br />
            <label>Address</label>
            <input type="text" class="form-control" asp-for="Address" />
            <br />
            <label>ImagePath</label>
            <input type="text" class="form-control" asp-for="ImagePath" />
            <br />
            <button class="btn btn-primary">Update About</button>
        </form>
    </div>
</div>