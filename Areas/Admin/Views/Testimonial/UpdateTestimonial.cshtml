@model TestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Testimonial Update Page</h4>
        <br />
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <br />
            <label>Title</label>
            <input type="text" class="form-control" asp-for="Title" />
            <br />
            <label>ImagePath</label>
            <input type="text" class="form-control" asp-for="ImagePath" />
            <br />
            <label>Comment</label>
            <input type="text" class="form-control" asp-for="Comment" />
            <br />
            <button class="btn btn-primary">Update Testimonial</button>
        </form>
    </div>
</div>