@model List<ContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Contact Table</h4>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td><a href="/Admin/Contact/DeleteContact/@item.Id" class="btn btn-danger">Delete</a></td>
                            <td><a href="/Admin/Contact/UpdateContact/@item.Id" class="btn btn-success">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Contact/CreateContact/" class="btn btn-primary">Create Contact</a>
        </div>
    </div>
</div>
